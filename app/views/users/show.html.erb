<div class="mt-5 container">
	<div class="row">
		<div class="cl-lg-7">
			<h1 class="text-center">User Profile</h1>	
			<h3 class="mt-5"><span class="label">Name:</span> <%= @user.name %></h3>
			
			<br>

			<h3><span class="label">Email:</span> <%= @user.email %></h3>

			<br>

			<h3><span class="label">Roles:</span>
			  <ul>
			    <% @user.roles.each do |role| %>
			      <li><%= role.name %></li>
			    <% end %>
			  </ul>
			</h3>
				
			<br>
				
			<%= link_to 'Edit Profile', edit_user_path(@user), class: 'btn btn-primary btn-lg' %>
			
			<%= form_for @user, url: user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } do |f| %>
  			<%= f.submit 'Delete', class: 'btn btn-danger btn-lg mt-3' %>
			<% end %>
			
			<%= link_to 'Back', users_path, class: 'btn btn-secondary btn-lg mt-3' %>
		</div>
	</div>
</div>

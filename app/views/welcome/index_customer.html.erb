<div class="mt-5 container text-center">
	<div class="row">
		<div class="cl-lg-12">
      <h1 class="text-center">Welcome! Customer</h1>
      <br>
      
      <table class="table table-bordered border-dark table-hover table-striped">
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
      
        <% @users.each do |user| %>
          <tr>
            <td> <%= user.name %></td>
            <td> <%= user.email %></td>
          </tr>
        <% end %>

      </table>

      <p>
        <%= button_to("Log Out", destroy_user_session_path, method: :delete,  class: "mt-3 btn btn-primary btn-lg")%>
      </p>

    </div>
  </div>
</div>
